<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.css" rel="stylesheet" />
</head>

<body>

  <!-- Default form register -->
  <div class="container mt-5 col-xl-6">
    <form class="text-center border border-light p-5" action="/admin/addProducts" method="post"
      enctype="multipart/form-data">

      <p class="h4 mb-4">Add Product</p>
        <a href="/admin/addBrands" class="btn btn-success mb-4">Click here to add new Brand, Category and Sub-category</a>

      <div class="form-row mb-4 d-flex">
        <div class="col d-flex" >
          <div class="col d-flex">
            <select name="brand" class="form-control">
              <option value="none" selected>Choose Brand Name</option>
              {{#each brandName}}
              <option>{{this.brandName}}</option>
              {{/each}}
            </select>
           
          </div>
          
          
        </div>
         
      </div>
    
       <div class="form-row mb-4 d-flex">
        <div class="col d-flex">
          <select name="category" class="form-control me-3">
            <option value="none" selected>Choose Category</option>
            {{#each category}}
            <option>{{this.category}}</option>
            {{/each}}
          </select>
         
        </div>

        <div class="col d-flex">
          <select name="subcategory" class="form-control">
            <option value="none" selected>Choose Sub-category</option>
            {{#each subcategory}}
            <option>{{this.subcategory}}</option>
            {{/each}}
          </select>         
        </div>
      </div>
      <div>
            <input type="text" id="defaultRegisterFormFirstName" class="form-control mb-4" placeholder="Product Name"
              name="productName" />
          </div>

      <div class="form-row mb-4 d-flex">
        <div class="col me-3">
          <!-- price -->
          <input type="number" id="defaultRegisterFormFirstName" class="form-control" placeholder="Price"
            name="price" />
        </div>
        <div class="col">
          <!-- price -->
          <input type="number" id="defaultRegisterFormFirstName" class="form-control" placeholder="Discount"
            name="discount" />
        </div>
      </div>

     

      <div class="form-row mb-4 d-flex">
        <div class="col">
          <input type="text" id="defaultRegisterFormLastName" class="form-control" placeholder="Stock" name="stock" />
        </div>
      </div>
      <textarea type="text" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="Description"
        name="description"></textarea>
      <div class="form-row mb-4 d-flex">
        <div class="col me-3">
          <input type="file" id="defaultRegisterFormFirstName" class="form-control" placeholder="image" name="image1" />
        </div>
        <div class="col">
          <input type="file" id="defaultRegisterFormLastName" class="form-control" placeholder="image" name="image2" />
        </div>
      </div>
      <div class="form-row mb-4 d-flex me">
        <div class="col me-3">
          <input type="file" id="defaultRegisterFormFirstName" class="form-control" placeholder="image" name="image3" />
        </div>
        <div class="col">
          <input type="file" id="defaultRegisterFormLastName" class="form-control" placeholder="image" name="image4" />
        </div>
      </div>
      {{! <button class="btn btn-info my-4 btn-block" type="submit">Submit</button> }}
      <input type="submit" class="btn btn-info my-4 btn-bloc k" style="width: 100%;" />
  
    </form>
  </div>
  <!-- Default form register -->

  <!-- MDB -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.js"></script>

</body>

</html>