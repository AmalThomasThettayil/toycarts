<html lang="en">

{{!-- --}}

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.css" rel="stylesheet" />
</head>

<body>



  <!-- Default form register -->
  <div class="container mt-5 col-xl-6">
    <form class="text-center border border-light p-5" action="/admin/editProduct/{{product._id}} " method="post" enctype="multipart/form-data">
      <p class="h4 mb-4">Edit Product</p>
      <div>
        <!--  name -->
        <input type="text" id="defaultRegisterFormFirstName" class="form-control mb-4" placeholder="Product Name"
          value="{{product.productName}}" name="productName" />
      </div>

      <div class="form-row mb-4 d-flex">
        <div class="col d-flex">
          <div class="col d-flex">

            <!-- brand name -->
            <select name="brand" class="form-control">
              <option value="{{product.brandName}}" selected>{{product.brand.brandName}}</option>
              {{#each brandName}}
              <option>{{this.brandName}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      </div>
      <div class="form-row mb-4 d-flex">
        <div class="col d-flex">
          <select name="category" class="form-control me-3">
            <option value="none" selected>Choose Category</option>
            {{#each category}}
            <option>{{this.category}}</option>
            {{/each}}
          </select>

        </div>

        <div class="col d-flex">
          <select name="subcategory" class="form-control">
            <option value="none" selected>Choose Sub-category</option>
            {{#each subcategory}}
            <option>{{this.subcategory}}</option>
            {{/each}}
          </select>

        </div>
      </div>

      <!-- description -->

      <div class="form-row mb-4 d-flex">
        <div class="col me-3">
          <!-- price -->
          <input type="number" id="defaultRegisterFormFirstName" class="form-control" placeholder="Price"
            value="{{product.price}}" name="price" />
        </div>

        <div class="col">
          <!-- price -->
          <input type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="Discount"
            value="{{product.discount}}" name="discount" />
        </div>
      </div>




      <div class="form-row mb-4 d-flex">

        <div class="col">
          <!-- sub category -->
          <input type="text" id="defaultRegisterFormLastName" class="form-control" placeholder="Stock"
            value="{{product.stock}}" name="stock" />
        </div>
      </div>
      <textarea type="text" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="Description"
        value="{{product.description}} " name="description"></textarea>

      <div class="form-row mb-4 d-flex">
        <div class="col me-3">
          <img src="/imgUploads/{{product.image.[0].image1}}" alt="" srcset="" style="width: 100px;height: auto; "
            class="mb-2" id="imgView">
          <input type="file" id="defaultRegisterFormFirstName" class="form-control" placeholder="image" name="image1"
          onchange="viewImage(event)" />
        </div>

        <div class="col">
          <img src="/imgUploads/{{product.image.[0].image2}}" alt="" srcset="" style="width: 100px;height: auto; "
            class="mb-2" id="imgView">
          <input type="file" id="defaultRegisterFormLastName" class="form-control" placeholder="image" name="image2" />
        </div>
      </div>

      <div class="form-row mb-4 d-flex me">
        <div class="col me-3">
          <img src="/imgUploads/{{product.image.[0].image3}}" alt="" srcset="" style="width: 100px;height: auto; "
            class="mb-2" id="imgView">
          <input type="file" id="defaultRegisterFormFirstName" class="form-control" placeholder="image" name="image3" />
        </div>
        <div class="col">
          <img src="/imgUploads/{{product.image.[0].image4}}" alt="" srcset="" style="width: 100px;height: auto; "
            class="mb-2" id="imgView">
          <input type="file" id="defaultRegisterFormLastName" class="form-control" placeholder="image" name="image4" />
        </div>
      </div>
      <button class="btn btn-success my-4 btn-block" type="submit">Update</button>
    </form>
  </div>
  <!-- Default form register -->

  <script>
    viewImage(event){
      document.getElementById(imgView).src=URL.createObjectURL(event.target.files[0])
    }
  </script>









  



  <!-- MDB -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.js"></script>

</body>

</html>
